{
  "name": "alpaxo/finite3",
  "description": "A simple PHP8.1+ Finite State Machine",
  "keywords": [
    "statemachine",
    "workflow",
    "state",
    "transition",
    "symfony",
    "bundle"
  ],
  "homepage": "https://github.com/yohang/Finite",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Yohan Giarelli",
      "email": "yohan@giarel.li",
      "homepage": "https://yohan.giarel.li"
    },
    {
      "name": "Finite contributors",
      "homepage": "https://github.com/yohang/Finite/graphs/contributors"
    }
  ],
  "require": {
    "php": "^8.1",
    "symfony/symfony": "^6.4",
    "symfony/property-access": "^6.4",
    "symfony/options-resolver": "^6.4",
    "symfony/event-dispatcher": "^6.4"
  },
  "require-dev": {
    "pimple/pimple": "^3.3",
    "twig/twig": "^3.0",
    "phpunit/phpunit": "^8.5",
    "phpstan/phpstan": "^1.10"
  },
  "conflict": {},
  "suggest": {
    "pimple/pimple": "Needed for use with PimpleFactory",
    "symfony/security": "Needed for using SecurityAwareStateMachine",
    "symfony/yaml": "Yaml allows you to define your State graph in YAML"
  },
  "autoload": {
    "psr-0": {
      "Finite": "src/"
    }
  },
  "config": {
    "bin-dir": "bin",
    "platform": {
      "php": "8.1.0"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-4.x": "4.0.x-dev"
    }
  }
}
